@model IEnumerable<Datalayer.mostComment>

@foreach (var item in Model)
{
    <div class="position-relative mb30-list bg-body">
        <div class="topic-box-top-xs">
            <div class="topic-box-sm color-cod-gray mb-20">@item.Title</div>
        </div>
        <div class="media">
            <a class="img-opacity-hover" href="single-news-1.html">
                <img src="~/PageImages/@item.ImageName" alt="news" class="img-fluid">
            </a>
            <div class="media-body">
                <div class="post-date-dark">
                    <ul>
                        <li>
                            <span>
                                <i class="fa fa-calendar" aria-hidden="true"></i>
                            </span>@item.CreateDate.ToShamsi()
                        </li>
                    </ul>
                </div>
                <h3 class="title-medium-dark mb-none">
                    <a href="single-news-2.html">@item.ShortDescription+@item.CommendCount</a>
                </h3>
            </div>
        </div>
    </div>

}
